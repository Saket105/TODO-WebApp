<%-include('header')%>

<div class="box" id="heading">
  <h1><%= day %></h1>
</div>

<div class="box">
    <% for(i=0;i<items.length;i++){ %>
      <div class="item">
        <input type="checkbox">
        <p><%= items[i] %></p>
      </div>
   
    <%}%>



<form class="item" action="/" method="post">
  <label for="newItem">Enter Your List : </label>
  <input type="text" name="newItem" placeholder="New Item" />
  <button type="submit" name="list" value=<%= day %>>+</button>
</form>

</div>



<%-include('footer')%>
